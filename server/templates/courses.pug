extends _layout

block body
  .container
    h1 All Mathematics Courses
    
    h2 Geometry
    .course-grid
      each course in courses.filter(c => ['circles', 'polygons', 'triangles', 'euclidean-geometry', 'non-euclidean-geometry', 'polyhedra', 'transformations', 'shapes', 'solids'].includes(c.id))
        a.course-card(href=course.sections[0].url)
          .course-thumbnail(style=`background: ${course.color || '#1F7AFF'}`)
            img(src=`/my courses/${course.id}/thumbnail.jpg` onerror="this.src='/assets/images/default-course.svg'")
          .course-body
            h3= course.title
            p.description= course.description
            if course.level
              .level= course.level
    
    h2 Probability & Statistics
    .course-grid
      each course in courses.filter(c => ['probability', 'basic-probability', 'statistics', 'combinatorics', 'data'].includes(c.id))
